  <div class="box">
    <h1>Sreya Dhar ğŸ’–</h1>
    <p>Will you be my Valentine? ğŸŒ¹</p>

    <div class="btns" id="btnArea">
      <button id="yesBtn">YES ğŸ˜</button>
      <button id="noBtn">NO ğŸ˜¤</button>
    </div>

    <div id="result">
      Yayyy Sreya Dhar!!! ğŸ’–ğŸ¥º<br>
      Made with love â€” Debjit ğŸ’Œ
    </div>

    <div class="footer">Try clicking NO ğŸ˜ˆ</div>
  </div>

  <script>
    const yesBtn = document.getElementById("yesBtn");
    const noBtn = document.getElementById("noBtn");
    const btnArea = document.getElementById("btnArea");
    const result = document.getElementById("result");

    // Move the NO button to random position inside the button area
    function moveNoButton() {
      const areaRect = btnArea.getBoundingClientRect();
      const btnRect = noBtn.getBoundingClientRect();

      // Safe random positions (so it stays inside area)
      const maxX = areaRect.width - btnRect.width;
      const maxY = areaRect.height - btnRect.height;

      const randomX = Math.floor(Math.random() * maxX);
      const randomY = Math.floor(Math.random() * maxY);

      noBtn.style.left = randomX + "px";
      noBtn.style.top = randomY + "px";
      noBtn.style.transform = "translate(0, 0)";
    }

    // On hover (PC) and touch (Mobile)
    noBtn.addEventListener("mouseenter", moveNoButton);
    noBtn.addEventListener("touchstart", (e) => {
      e.preventDefault();
      moveNoButton();
    });

    // Extra: If she almost clicks it ğŸ˜„
    noBtn.addEventListener("click", moveNoButton);

    // YES button click: remove buttons + show message
    yesBtn.addEventListener("click", () => {
      btnArea.style.display = "none";
      result.style.display = "block";
    });
  </script>

